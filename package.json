{
  "author": "Sebastian Saldarriaga <sebastian@ubidots.com>",
  "dependencies": {
    "@ubidots/ubidots-javascript-library": "^1.2.2"
  },
  "description": "Ubidots HTML canvas post message library",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.5.0",
    "@vitest/ui": "3.2.4",
    "eslint": "9.35.0",
    "jsdom": "27.0.0",
    "prettier": "3.6.2",
    "semantic-release": "^24.0.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.28.13",
    "typescript": "^5.9.2",
    "vitest": "3.2.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "name": "ubidots-html-canvas",
  "repository": {
    "type": "git",
    "url": "https://github.com/ubidots/ubidots-html-canvas.git"
  },
  "scripts": {
    "build": "tsup",
    "build:analyze": "tsup --metafile",
    "build:legacy": "tsup --config tsup.config.ts",
    "build:watch": "tsup --watch",
    "clean": "rm -rf dist build docs",
    "dev": "tsup --watch",
    "docs": "typedoc",
    "docs:serve": "typedoc && cd docs && python -m http.server 8080",
    "format": "prettier --config .prettierrc --write src/**/*",
    "format:check": "prettier --config .prettierrc --check src/**/*",
    "lint": "eslint src/**/*",
    "prepublishOnly": "npm run clean && npm run typecheck && npm run test:run && npm run build",
    "release": "semantic-release",
    "size": "size-limit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:typecheck": "vitest typecheck",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run lint && npm run test:run && npm run build"
  },
  "types": "dist/index.d.ts",
  "version": "1.1.0"
}
